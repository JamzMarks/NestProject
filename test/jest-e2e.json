{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./", 
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": ["<rootDir>"], 
  "modulePaths": ["<rootDir>/../src"], 
  "moduleDirectories": ["node_modules"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
}
